{
  "version": "1.0",
  "globalSettings": {
    "model": "sonnet",
    "timeout": 90000,
    "logLevel": "INFO"
  },
  "roles": {
    "content-processor": {
      "model": "sonnet",
      "permissions": {
        "mode": "acceptEdits"
      },
      "tools": {
        "allowed": ["Read", "Write", "Edit", "LS", "Bash"],
        "denied": []
      },
      "prompts": {
        "prefix": "You are an expert content manager. Follow the established workflows and patterns defined in obsidian-vault/core/."
      },
      "context": {
        "maxTokens": 4000,
        "temperature": 0.7
      }
    },
    "system-maintainer": {
      "model": "sonnet",
      "permissions": {
        "mode": "acceptEdits"
      },
      "tools": {
        "allowed": ["Read", "Write", "Edit", "LS", "Bash", "Grep", "Glob"],
        "denied": []
      },
      "prompts": {
        "prefix": "You are a meticulous system maintainer. Focus on improving organization, fixing inconsistencies, and ensuring high content quality."
      },
      "context": {
        "maxTokens": 8000,
        "temperature": 0.5
      }
    },
    "content-publisher": {
      "model": "sonnet",
      "permissions": {
        "mode": "acceptEdits"
      },
      "tools": {
        "allowed": ["Read", "Write", "Edit", "LS", "Bash", "Grep"],
        "denied": []
      },
      "prompts": {
        "prefix": "You are a publishing specialist. Transform Obsidian content for web publication while maintaining quality and consistency."
      },
      "context": {
        "maxTokens": 6000,
        "temperature": 0.3
      }
    },
    "media-organizer": {
      "model": "sonnet", 
      "permissions": {
        "mode": "acceptEdits"
      },
      "tools": {
        "allowed": ["Read", "Write", "Edit", "LS", "Bash", "Grep"],
        "denied": []
      },
      "prompts": {
        "prefix": "You are a media content specialist. Create structured, insightful notes from various media sources while maintaining proper attribution."
      },
      "context": {
        "maxTokens": 6000,
        "temperature": 0.6
      }
    },
    "link-validator": {
      "model": "sonnet",
      "permissions": {
        "mode": "acceptEdits"
      },
      "tools": {
        "allowed": ["Read", "Write", "Edit", "LS", "Bash", "Grep", "Glob"],
        "denied": []
      },
      "prompts": {
        "prefix": "You are a link integrity specialist. Ensure all references are valid and maintain proper cross-linking throughout the content system."
      },
      "context": {
        "maxTokens": 4000,
        "temperature": 0.2
      }
    }
  },
  "workflow": {
    "inboxProcessing": {
      "batchSize": 10,
      "autoCommit": true,
      "requiresApproval": false
    },
    "contentPublishing": {
      "validateBeforePublish": true,
      "archiveOriginals": true,
      "updateCrossReferences": true
    },
    "systemMaintenance": {
      "generateReport": true,
      "fixBrokenLinks": true,
      "updateTemplates": true
    }
  }
}