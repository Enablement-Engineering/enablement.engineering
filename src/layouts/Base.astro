---
import ThemeToggle from '../components/ThemeToggle.astro';

export interface Props {
  title: string;
  description?: string;
}

const { title, description = "AI as the translation layer between human intention and computational capability" } = Astro.props;
---

<!DOCTYPE html>
<html lang="en" data-theme="light">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content={description} />
    <meta name="generator" content={Astro.generator} />
    
    <title>{title} | enablement.engineering</title>
    
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    
    <!-- Respect user preferences -->
    <meta name="color-scheme" content="light dark" />
    
    <style is:global>
      /* Reset and base styles */
      *, *::before, *::after {
        box-sizing: border-box;
      }
      
      body {
        margin: 0;
        line-height: 1.6;
        font-family: system-ui, -apple-system, sans-serif;
        color: var(--color-text);
        background-color: var(--color-bg);
      }
      
      /* Semantic color system */
      :root, [data-theme="light"] {
        --color-bg: white;
        --color-text: #111;
        --color-accent: #0066cc;
        --color-muted: #666;
        --color-border: #e5e5e5;
      }
      
      [data-theme="dark"] {
        --color-bg: #0a0a0a;
        --color-text: #e5e5e5;
        --color-accent: #3d85ff;
        --color-muted: #999;
        --color-border: #333;
      }
      
      @media (prefers-color-scheme: dark) {
        :root:not([data-theme="light"]) {
          --color-bg: #0a0a0a;
          --color-text: #e5e5e5;
          --color-accent: #3d85ff;
          --color-muted: #999;
          --color-border: #333;
        }
      }
      
      /* Typography */
      h1, h2, h3, h4, h5, h6 {
        line-height: 1.2;
        margin-top: 2rem;
        margin-bottom: 1rem;
      }
      
      a {
        color: var(--color-accent);
        text-decoration: underline;
        text-underline-offset: 0.2em;
      }
      
      a:hover, a:focus {
        text-decoration-thickness: 2px;
      }
      
      /* Layout primitives */
      .container {
        max-width: 65ch;
        margin: 0 auto;
        padding: 0 1rem;
      }
      
      /* Skip link */
      .skip-link {
        position: absolute;
        top: -40px;
        left: 0;
        background: var(--color-bg);
        color: var(--color-text);
        padding: 8px;
        text-decoration: none;
        border: 2px solid var(--color-accent);
      }
      
      .skip-link:focus {
        top: 0;
      }
      
      /* Utility: Visually hidden but screen reader accessible */
      .sr-only {
        position: absolute;
        width: 1px;
        height: 1px;
        padding: 0;
        margin: -1px;
        overflow: hidden;
        clip: rect(0, 0, 0, 0);
        white-space: nowrap;
        border-width: 0;
      }
    </style>
  </head>
  <body>
    <a href="#main" class="skip-link">Skip to main content</a>
    
    <header>
      <nav class="container" aria-label="Main navigation" style="display: flex; justify-content: space-between; align-items: center; padding-top: 1rem; padding-bottom: 1rem;">
        <div style="display: flex; align-items: center; gap: 2rem;">
          <a href="/" rel="home" style="font-weight: 600; text-decoration: none; color: var(--color-text);">enablement.engineering</a>
          <ul style="list-style: none; padding: 0; margin: 0; display: flex; gap: 1rem;">
            <li><a href="/">Posts</a></li>
            <li><a href="/about">About</a></li>
          </ul>
        </div>
        <ThemeToggle />
      </nav>
    </header>
    
    <main id="main" class="container">
      <slot />
    </main>
    
    <footer class="container" style="margin-top: 4rem; padding-top: 2rem; border-top: 1px solid var(--color-border);">
      <p style="color: var(--color-muted); font-size: 0.875rem;">
        Â© 2024 Dylan Isaac. 
        <a href="/feed.xml">RSS</a>
      </p>
    </footer>
  </body>
</html>