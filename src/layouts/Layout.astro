---
import '../styles/globals.css';
import Navigation from '../components/Navigation.astro';
import Footer from '../components/Footer.astro';

export interface Props {
	title: string;
	description?: string;
	ogImage?: string;
	showGrid?: boolean;
}

const SITE_NAME = "Enablement Engineering";
const SITE_URL = "https://enablement.engineering";

const {
	title,
	description = "AI systems that extend human capability. Custom agentic systems with glass-box architectureâ€”transparent, auditable, and yours to own.",
	ogImage = "/og-image.png",
	showGrid = false
} = Astro.props;

// Auto-detect current page from URL
const currentPage = Astro.url.pathname;
---

<!doctype html>
<html lang="en" class="scroll-smooth bg-paper">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content={description} />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<link rel="apple-touch-icon" href="/apple-touch-icon.png" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>

		<!-- Open Graph / Facebook -->
		<meta property="og:type" content="website" />
		<meta property="og:site_name" content={SITE_NAME} />
		<meta property="og:url" content={Astro.url} />
		<meta property="og:title" content={title} />
		<meta property="og:description" content={description} />
		<meta property="og:image" content={`${SITE_URL}${ogImage}`} />

		<!-- Twitter/X -->
		<meta name="twitter:card" content="summary_large_image" />
		<meta name="twitter:title" content={title} />
		<meta name="twitter:description" content={description} />
		<meta name="twitter:image" content={`${SITE_URL}${ogImage}`} />
	</head>
	<body class="bg-paper text-ink font-sans antialiased pt-20 md:pt-24">
		<!-- Skip Link -->
		<a
			href="#main-content"
			class="skip-link"
		>
			Skip to main content
		</a>


		<!-- Optional grid overlay for design system -->
		{showGrid && (
			<div class="fixed inset-0 pointer-events-none z-50 opacity-5">
				<div class="grid-container h-full">
					<div class="grid-12 h-full">
						{Array.from({ length: 12 }, (_, i) => (
							<div key={i} class="border-l border-ink/20 h-full"></div>
						))}
					</div>
				</div>
			</div>
		)}

		<!-- Navigation -->
		<div class="grid-container">
			<Navigation currentPage={currentPage} />
		</div>

		<!-- Main Content -->
		<main id="main-content" class="min-h-screen focus:outline-none focus:ring-2 focus:ring-accent-600" tabindex="-1">
			<div class="grid-container">
				<slot />
			</div>
		</main>

		<!-- Footer -->
		<Footer />
	</body>
</html>