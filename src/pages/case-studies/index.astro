---
import Layout from '../../layouts/Layout.astro';
import Header from '../../components/Header.astro';
import { getCollection } from 'astro:content';

const items = await getCollection('case_studies', ({ data }) => !data.draft);
---

<Layout title="Case Studies â€“ Enablement Engineering">
  <Header />
  <main id="main" class="max-w-3xl mx-auto px-6 md:px-8 py-16 space-y-8">
    <h1 class="text-h2 font-bold">Case Studies</h1>
    <ul class="space-y-6">
      {items.map((post) => (
        <li>
          <a class="block" href={`/case-studies/${post.slug}/`}>
            <h2 class="text-h3 font-medium">{post.data.title}</h2>
            <p class="text-body text-secondary">{post.data.problem}</p>
          </a>
        </li>
      ))}
    </ul>
  </main>
</Layout>





