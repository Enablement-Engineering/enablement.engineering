---
import Layout from '../layouts/Layout.astro';
import { LogoWide } from '../components/Logo';
import { RandomTagline } from '../components/RandomTagline';
import { getCollection } from 'astro:content';

// Get the 2 most recent writing posts
const allWriting = await getCollection('writing');
const recentWriting = allWriting
	.sort((a, b) => b.data.publishedAt.getTime() - a.data.publishedAt.getTime())
	.slice(0, 2);
---

<Layout title="Enablement Engineering" description="AI systems that extend human capability—transparent, auditable, and yours to own.">
	<!-- Hero Section -->
	<section class="min-h-[calc(100vh-5rem)] flex items-center justify-center">
		<div class="flex flex-col items-center text-center">
			<div class="relative">
				<LogoWide
					className="w-full max-w-xl h-auto"
					sunVariant="circle"
					sunColor="#FFD60A"
					textColor="#0B0E14"
					ladderColor="#0B0E14"
					animateSun={true}
					defaultBounce={true}
					hoverMorph={true}
					client:load
				/>
			</div>
			<RandomTagline client:load />
		</div>
	</section>

	<!-- Trusted By Section -->
	<section class="py-8 border-t border-neutral-200">
		<p class="text-center text-sm text-neutral-500 mb-6">Currently working with</p>
		<div class="flex flex-wrap justify-center items-center gap-8">
			<img src="/images/clients/uic-logo.svg" alt="University of Illinois Chicago" class="h-16" />
			<img src="/images/clients/equalify-logo.svg" alt="Equalify" class="h-12" />
		</div>
	</section>

	<!-- How I Can Help -->
	<section class="py-20">
		<div class="text-center mb-16">
			<h2 class="text-3xl lg:text-4xl font-bold text-ink mb-4">How I Can Help</h2>
			<p class="text-xl text-neutral-600 max-w-2xl mx-auto">
				Custom AI systems with <a href="/definitions/glass-box" class="text-link-600">glass-box</a> architecture—transparent, auditable, and yours to own.
			</p>
		</div>

		<div class="grid grid-cols-1 md:grid-cols-3 gap-8">
			<div class="card-base p-8 hover:shadow-lg transition-shadow off-kilter-1">
				<div class="w-12 h-12 bg-primary-100 flex items-center justify-center mb-6 rounded-lg">
					<svg class="w-6 h-6 text-primary-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
						<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4" />
					</svg>
				</div>
				<h3 class="text-2xl font-semibold text-ink mb-4">For Small Businesses Going AI-Native</h3>
				<p class="text-neutral-600 leading-relaxed mb-4">
					Stop paying for software that doesn't fit how you work. I build custom AI systems that automate your specific workflows—transparent, auditable, and yours to own.
				</p>
				<p class="text-sm text-neutral-500 italic">
					From document processing to customer communication
				</p>
			</div>

			<div class="card-base p-8 hover:shadow-lg transition-shadow">
				<div class="w-12 h-12 bg-accent-100 flex items-center justify-center mb-6 rounded-lg">
					<svg class="w-6 h-6 text-accent-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
						<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" />
					</svg>
				</div>
				<h3 class="text-2xl font-semibold text-ink mb-4">For Individuals Building Personal Systems</h3>
				<p class="text-neutral-600 leading-relaxed mb-4">
					Your productivity stack should adapt to you, not the other way around. I help people build personal automation systems that actually work.
				</p>
				<p class="text-sm text-neutral-500 italic">
					Knowledge management, task automation, AI assistants
				</p>
			</div>

			<div class="card-base p-8 hover:shadow-lg transition-shadow off-kilter-neg-1">
				<div class="w-12 h-12 bg-secondary-100 flex items-center justify-center mb-6 rounded-lg">
					<svg class="w-6 h-6 text-secondary-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
						<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z" />
					</svg>
				</div>
				<h3 class="text-2xl font-semibold text-ink mb-4">For Organizations Needing Accessible AI</h3>
				<p class="text-neutral-600 leading-relaxed mb-4">
					AI and accessibility aren't separate concerns—they're the same problem: translating between <a href="/writing/epistemological-translator" class="text-link-600">different ways of knowing</a>. I build AI systems with accessibility engineered in from the start.
				</p>
				<p class="text-sm text-neutral-500 italic">
					From alt text at scale to accessible document transformation
				</p>
			</div>
		</div>
	</section>

	<!-- Featured Work -->
	<section class="py-20 border-t border-neutral-200">
		<div class="text-center mb-12">
			<h2 class="text-3xl lg:text-4xl font-bold text-ink mb-4">Featured Work</h2>
		</div>

		<div class="max-w-3xl mx-auto">
			<a href="/work/equalify-pdf-converter" class="block card-base p-8 hover:shadow-lg transition-shadow group">
				<p class="text-sm uppercase tracking-wider text-neutral-500 font-medium mb-2">
					University of Illinois Chicago — Digital Accessibility Services
				</p>
				<h3 class="text-2xl lg:text-3xl font-semibold text-ink mb-4 group-hover:text-accent-600 transition-colors">
					Equalify PDF to Semantic Markup Converter
				</h3>
				<p class="text-lg text-neutral-600 leading-relaxed mb-4">
					Transforming inaccessible academic PDFs into adaptive, semantic web experiences at scale.
				</p>
				<span class="text-link-600 font-medium group-hover:text-link-700 transition-colors">
					Read case study →
				</span>
			</a>
		</div>
	</section>

	<!-- Latest Writing -->
	<section class="py-20 border-t border-neutral-200">
		<div class="text-center mb-12">
			<h2 class="text-3xl lg:text-4xl font-bold text-ink mb-4">Latest Writing</h2>
		</div>

		<div class="grid grid-cols-1 md:grid-cols-2 gap-8 max-w-4xl mx-auto">
			{recentWriting.map((post) => (
				<a href={`/writing/${post.slug}`} class="block card-base p-6 hover:shadow-lg transition-shadow group">
					<h3 class="text-xl font-semibold text-ink mb-2 group-hover:text-accent-600 transition-colors">
						{post.data.title}
					</h3>
					<p class="text-neutral-600 leading-relaxed">
						{post.data.description}
					</p>
				</a>
			))}
		</div>

		<div class="text-center mt-8">
			<a href="/writing" class="text-link-600 font-medium hover:text-link-700 transition-colors">
				View all writing →
			</a>
		</div>
	</section>

	<!-- CTA -->
	<section class="py-20 text-center">
		<div class="max-w-3xl mx-auto space-y-6">
			<h2 class="text-3xl lg:text-4xl font-bold text-ink">
				Ready to build agents you can trust?
			</h2>
			<div class="pt-4">
				<a href="/contact" class="inline-flex items-center justify-center whitespace-nowrap rounded-lg text-lg font-semibold ring-offset-background transition-colors focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-accent focus-visible:ring-offset-2 disabled:pointer-events-none disabled:opacity-50 bg-accent-500 text-secondary-900 hover:bg-accent-600 h-12 px-10 no-underline">
					Book a discovery call
				</a>
				<div class="mt-4">
					<a href="/services" class="text-lg text-link-600 hover:text-link-700 font-medium">
						View services
					</a>
				</div>
			</div>
		</div>
	</section>
</Layout>
