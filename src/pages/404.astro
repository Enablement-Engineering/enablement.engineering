---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import ArrowLink from '../components/ArrowLink.astro';
---

<Layout 
  title="404 - Page Not Found | Dylan Isaac"
  description="The page you're looking for doesn't exist."
>
  <Header />
  <main id="main" class="max-w-2xl mx-auto px-6 md:px-8 py-16">
    <div class="text-center space-y-8">
      <div class="space-y-4">
        <h1 class="text-h1 font-bold">404</h1>
        <p class="text-h3 text-content-muted dark:text-dark-content-muted">
          Page not found
        </p>
        <p class="text-lg text-content-muted dark:text-dark-content-muted">
          The page you're looking for doesn't exist or has been moved.
        </p>
      </div>
      
      <nav class="flex gap-6 justify-center" aria-label="404 navigation">
        <ArrowLink href="/">
          Go home
        </ArrowLink>
        <ArrowLink href="/writing">
          Read writing
        </ArrowLink>
      </nav>
    </div>
  </main>
</Layout>