---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
---

<Layout title="Contact – Enablement Engineering">
  <Header />
  <main id="main" class="max-w-2xl mx-auto px-6 md:px-8 py-16 space-y-8">
    <h1 class="text-h2 font-bold">Contact</h1>
    <p class="text-body">Have a project or want to collaborate? Send a message or schedule a call.</p>

    <div class="space-y-6">
      <a class="cta-bg inline-block px-4 py-2 rounded-md" href="https://calendly.com/" target="_blank" rel="noopener noreferrer">Schedule on Calendly</a>

      <form name="contact" method="POST" data-netlify="true" netlify-honeypot="bot-field" class="space-y-4" action="/thank-you">
        <input type="hidden" name="form-name" value="contact" />
        <p class="hidden">
          <label>Don’t fill this out: <input name="bot-field" /></label>
        </p>
        <p>
          <label class="block mb-1">Your Name
            <input class="w-full border border-role rounded px-3 py-2" type="text" name="name" required />
          </label>
        </p>
        <p>
          <label class="block mb-1">Email
            <input class="w-full border border-role rounded px-3 py-2" type="email" name="email" required />
          </label>
        </p>
        <p>
          <label class="block mb-1">Message
            <textarea class="w-full border border-role rounded px-3 py-2" name="message" rows="6" required></textarea>
          </label>
        </p>
        <p>
          <button type="submit" class="cta-bg px-4 py-2 rounded-md">Send</button>
        </p>
      </form>
    </div>
  </main>
</Layout>





