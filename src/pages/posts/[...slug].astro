---
import { type CollectionEntry, getCollection } from 'astro:content';
import Base from '../../layouts/Base.astro';

export async function getStaticPaths() {
  const posts = await getCollection('posts');
  return posts.map((post) => ({
    params: { slug: post.slug },
    props: post,
  }));
}
type Props = CollectionEntry<'posts'>;

const post = Astro.props;
const { Content } = await post.render();
---

<Base title={post.data.title} description={post.data.description}>
  <article>
    <header style="margin-bottom: 2rem;">
      <h1>{post.data.title}</h1>
      <div style="display: flex; gap: 1rem; align-items: center; color: var(--color-muted); font-size: 0.875rem;">
        <time datetime={post.data.pubDate.toISOString()}>
          {post.data.pubDate.toLocaleDateString('en-US', { 
            year: 'numeric', 
            month: 'long', 
            day: 'numeric' 
          })}
        </time>
        {post.data.updatedDate && (
          <>
            <span aria-hidden="true">•</span>
            <span>Updated: <time datetime={post.data.updatedDate.toISOString()}>
              {post.data.updatedDate.toLocaleDateString('en-US', { 
                year: 'numeric', 
                month: 'long', 
                day: 'numeric' 
              })}
            </time></span>
          </>
        )}
      </div>
      {post.data.tags.length > 0 && (
        <ul style="list-style: none; padding: 0; display: flex; gap: 0.5rem; flex-wrap: wrap; margin-top: 1rem;">
          {post.data.tags.map(tag => (
            <li>
              <span style="font-size: 0.875rem; padding: 0.25rem 0.5rem; background: var(--color-border); border-radius: 0.25rem;">
                {tag}
              </span>
            </li>
          ))}
        </ul>
      )}
    </header>
    
    <div class="prose">
      <Content />
    </div>
  </article>
  
  <nav aria-label="Return to posts" style="margin-top: 3rem; padding-top: 2rem; border-top: 1px solid var(--color-border);">
    <a href="/">← Back to all posts</a>
  </nav>
</Base>

<style is:global>
  .prose {
    max-width: 65ch;
  }
  
  .prose h2,
  .prose h3,
  .prose h4 {
    margin-top: 2rem;
    margin-bottom: 1rem;
  }
  
  .prose p {
    margin-bottom: 1rem;
  }
  
  .prose pre {
    padding: 1rem;
    border-radius: 0.5rem;
    overflow-x: auto;
    background-color: var(--color-border);
  }
  
  .prose code {
    font-family: ui-monospace, monospace;
    font-size: 0.875em;
  }
  
  .prose blockquote {
    border-left: 3px solid var(--color-accent);
    padding-left: 1rem;
    margin-left: 0;
    font-style: italic;
  }
  
  .prose ul,
  .prose ol {
    padding-left: 1.5rem;
  }
  
  .prose img {
    max-width: 100%;
    height: auto;
  }
</style>